#!/bin/bash

set -e

if [[ -z "$1" ]]; then
  echo "ðŸ‘¹ Oops! Missing arguments required for base path NEXT_PUBLIC_BASE_PATH"
  exit 1
fi

NEXT_PUBLIC_BASE_PATH="$1"
OUTPUT_DIR="out"
TEMP_DIR="$OUTPUT_DIR.bak"
DEST_DIR="$OUTPUT_DIR/$NEXT_PUBLIC_BASE_PATH"

if [[ ! -d "$OUTPUT_DIR" ]]; then
  echo "ðŸ‘¹ Oops! The output dir $OUT_DIR doesn not exist"

  exit 1
fi

mv "$OUTPUT_DIR" "$TEMP_DIR" || exit 1
echo "âœ… Moved $OUTPUT_DIR to $TEMP_DIR"

mkdir -p "$DEST_DIR" || exit 1
echo "âœ… Created $DEST_DIR"

cp -r "$TEMP_DIR/" "$DEST_DIR"
echo "âœ… Moved files from $TEMP_DIR to $DEST_DIR"

rm -rf "$TEMP_DIR" || exit 1
echo "âœ… Removed $TEMP_DIR"

if [[ -d "$DEST_DIR" && "$(ls -A $DEST_DIR)" ]]; then
  echo "âœ… Created $DEST_DIR"
else
  echo "ðŸ‘¹ Oops! Failed to create $DEST_DIR for some reason..."

  exit 1
fi

