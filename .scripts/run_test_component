#!/bin/bash

target_dir="src"
has_spec_files="$(find "$target_dir" -name '*.component.spec.tsx')"

if [[ "$has_spec_files" == "" ]]; then
  echo "ğŸ‘¹ Oops! Couldn't find any component tests. Has the tests location for components changed?"
  exit 1
fi

if ! pnpm exec vitest run "$has_spec_files"; then
  echo "ğŸ‘¹ Oops! The test runner has encountered issues."
  exit 1
fi

echo "ğŸ‘ Test run for components completed!"
