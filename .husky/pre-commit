#!/bin/bash

echo "ğŸš‘ Health check, please be patient..."
echo

while read -rp "ğŸ’ Do you want to run tests now? (yes/no) " ans; do
  if [[ "$ans" == [nN] || "$ans" == [nN][oO] ]]; then
    echo "ğŸ™„ Skipped! But remember to run tests often, please!"

    break;
  elif [[ "$ans" == [yY] || "$ans" == [yY][eE][sS] ]]; then    
    if ! pnpm test; then
      echo "ğŸ¦– Failed to commit due to unhealthy tests. Fix it and try again!"
      exit 1
    fi

    break;
  fi

  echo "ğŸ’© Uh-oh! We expect a yes or no answer. Try again..."
done
