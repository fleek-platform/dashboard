#!/bin/bash

show_user_test_prompt() {
  # Redirect user input
  exec < /dev/tty
  local answer

  while read -rp "ðŸ’ Do you want to run tests now? (yes/no) " ans; do
    if [[ "$ans" == [nN] || "$ans" == [nN][oO] ]]; then
      echo "ðŸ™„ Skipped! But remember to run tests often, please!"

      break;
    elif [[ "$ans" == [yY] || "$ans" == [yY][eE][sS] ]]; then    
      if ! pnpm test; then
        echo "ðŸ¦– Failed to commit due to unhealthy tests. Fix it and try again!"
        exit 1
      fi

      break;
    fi

    echo "ðŸ’© Uh-oh! We expect a yes or no answer. Try again..."
  done
}

echo "ðŸš‘ Health check, please be patient..."
echo

if [[ -z "$CI" ]]; then
  show_user_test_prompt
else
  echo "ðŸ¦– Automated CI run detected - skipping test prompt"
fi

if pnpm run format:check; then
  echo "âœ… Code format checked!"
else
  echo "âš ï¸ WARNING: Incorrect code format, fix it before committing, please!"
  echo "ðŸ’¡ Use the command pnpm format"
  exit 1
fi

if pnpm run changeset:verify; then
  echo "âœ… Changeset file's included!"
else
  echo "âš ï¸ WARNING: You must include a changeset!"
  echo "ðŸ’¡ Use the command pnpm changeset:add"
  exit 1
fi

# TODO: There are several linter warnings
# Can't auto-fix, have to be revised manually
# if pnpm run lint:check; then
#   echo "âœ… Linter check is good!"
# else
#   echo "âš ï¸ WARNING: Linter found issues, fix them before committing, please!"
#   echo "ðŸ’¡ Use the command pnpm lint"
#   exit 1
# fi

echo "ðŸ‘ Health check completed."
echo
